@model List<TP2.Models.Person>

@{
    ViewData["Title"] = "PERSONS LIST";
}

<div style="display: flex;justify-content:space-evenly;width:100%">
    <h1 style="padding-left:300px;color:cornflowerblue">  Persons List</h1>
    <h3>
        <a asp-action="search" style="margin-left:500px;margin-top:100px;text-decoration: none;border-radius:5px;font-size:20px;padding:10px" class="bg-danger bg-gradient">Search</a>
    </h3>
</div>
<br />
<br />


<div>
    <table class="table">
    @{
        
             <thead class="thead-dark">
             <tr>
        
                <th scope="col">ID </th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Email</th>
                <th scope="col">Image</th>
                <th scope="col">Country</th>
            </tr>
        </thead>
       
        
        foreach (Person p in Model)
        {
            
            
            <tbody>
    <tr>
                   <th scope="row">@p.id</th>
                    <td>@p.first_name</td>
                    <td>@p.last_name</td>
                    <td>@p.email</td>
                    <td>@p.image</td>
                    <td>@p.country</td>
    </tr>
    </tbody> 
    
            
        }
    }
        </table >

</div>